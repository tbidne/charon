cabal-version:      2.4
name:               del
version:            0.1
license:            MIT
license-file:       LICENSE
tested-with:        GHC ==8.10.7 || ==9.0.2 || ==9.2.3
copyright:          2022 Thomas Bidne
author:             Thomas Bidne
maintainer:         tbidne@protonmail.com
homepage:           https://github.com/tbidne/del/
bug-reports:        https://github.com/tbidne/del/issues
synopsis:           Template
description:        Template
category:           Template
extra-source-files:
  CHANGELOG.md
  README.md

source-repository head
  type:     git
  location: https://github.com/tbidne/del

common common-exts
  default-extensions:
    BangPatterns
    ConstraintKinds
    DataKinds
    DeriveAnyClass
    DeriveFunctor
    DeriveGeneric
    DeriveTraversable
    DerivingStrategies
    DerivingVia
    FlexibleContexts
    FlexibleInstances
    FunctionalDependencies
    GADTs
    GeneralizedNewtypeDeriving
    ImportQualifiedPost
    InstanceSigs
    LambdaCase
    MultiParamTypeClasses
    MultiWayIf
    NamedFieldPuns
    NumericUnderscores
    OverloadedStrings
    PatternSynonyms
    RankNTypes
    ScopedTypeVariables
    StandaloneDeriving
    StandaloneKindSignatures
    TupleSections
    TypeApplications
    TypeFamilyDependencies
    TypeOperators

library
  import:           common-exts
  exposed-modules:  Del
  build-depends:
    , base        >=4.14.0.0  && <4.17
    , bytestring  >=0.10.10.0 && <0.12
    , cassava     ^>=0.5
    , deepseq     ^>=1.4.4.0
    , directory   ^>=1.3.5.0
    , filepath    ^>=1.4.2.1
    , text        >=1.2.3.2   && <2.1
    , vector      >=0.12.1.2  && <0.14

  hs-source-dirs:   src
  default-language: Haskell2010

executable del
  import:           common-exts
  main-is:          Main.hs
  other-modules:    Args
  build-depends:
    , base
    , del
    , gitrev                >=1.2.0   && <1.4
    , optparse-applicative  >=0.15    && <0.18
    , package-version       >=0.1.0.0 && <0.4

  hs-source-dirs:   app
  ghc-options:      -threaded -with-rtsopts=-N
  default-language: Haskell2010
